{
    "name": "sspeech_conv_1_kaggle",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [],
      "spectrogram": []
    },
    "arch": {
      "type": "ShallowSpeechConv",
      "args": {
        "n_feats": 128,
        "fc_hidden": 512
      }
    },
    "data": {
      "train": {
        "batch_size": 64,
        "num_workers": 2,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-100",
              "data_dir": "/kaggle/input/librispeech",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      },
      "val": {
        "batch_size": 64,
        "num_workers": 2,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean",
              "data_dir": "/kaggle/input/librispeech",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 3e-4
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      },
      {
        "type": "BeamSearchWERMetric",
        "args": {
          "name": "WER (Beam-Search)"
        }
      },
      {
        "type": "BeamSearchCERMetric",
        "args": {
          "name": "CER (Beam-Search)"
        }
      }
    ],
    "lr_scheduler": {
      "type": "ReduceLROnPlateau",
      "args": {
        "factor": 0.3,
        "patience": 300,
        "min_lr": 1e-5
      }
    },
    "trainer": {
      "epochs": 1000,
      "save_dir": "saved/",
      "save_period": 20,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "grad_norm_clip": 10
    }
  }
  